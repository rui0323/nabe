<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
        <div class="form-body p-4">
          <%= form_with model: @customer do |f| %>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "w-100"  %>
              <div class="input-group mb-3 mt-4">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
                </div>
                 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
                </div>
                  <%= f.text_area :title, class:"form-control", autofocus: true, id:"inputTitle", placeholder:"自己紹介"%>

                <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>