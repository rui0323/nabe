<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<% @posts.each do |post| %>
<div>
   <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image %>

   <% end %>
  <p>投稿ユーザー画像：<%= image_tag post.customer.get_profile_image(100,100) %></p>
  <p>ショップ名：<%= post.title %></p>
  <p>説明：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.customer.name %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
</div>
<% end %>

<%= paginate @posts %>